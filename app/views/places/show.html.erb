<h1><%= @place.name %></h1>

<h2>My Posts</h2>
<% for post in @place.posts %>

  <h3><%= post.title %></h3>
  <h4><%= post.posted_on %></h4>
  <p><%= post.description %></p>
<% end %>

<a href="/posts/new?place_id=<%= @place.id %>">Add Post</a>

<a href="/places">Back to all places</a>

<p><%= button_to "Delete this place", @place, method: :delete %></p>

